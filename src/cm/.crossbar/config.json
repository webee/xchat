{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "options": {
                "pythonpath": [
                    "..", "../.."
                ],
                "env": {
                    "inherit": true,
                    "vars": {
                        "DJANGO_SETTINGS_MODULE": "xchat_site.settings"
                    }
                }
            },
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "public",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": true,
                                        "publisher": true
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "xchat-auth",
                    "roles": [
                        {
                            "name": "authenticator",
                            "permissions": [
                                {
                                    "uri": "xchat.authenticate.",
                                    "match": "prefix",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "xchat",
                    "roles": [
                        {
                            "name": "xchat",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": false
                                    },
                                    "cache": true
                                }
                            ]
                        },
                        {
                            "name": "user",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": false,
                                        "publish": false,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": true,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 48080
                    },
                    "options": {
                        "access_log": true
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../web"
                        },
                        "ws": {
                            "type": "websocket",
                            "auth": {
                                "ticket": {
                                    "type": "dynamic",
                                    "authenticator": "xchat.authenticate.jwt",
                                    "authenticator-realm": "xchat-auth"
                                },
                                "anonymous": {
                                    "type": "static",
                                    "role": "public"
                                }
                            }
                        }
                    }
                },
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 9980
                    },
                    "paths": {
                        "/": {
                            "type": "wsgi",
                            "module": "xchat_site.wsgi",
                            "object": "application"
                        },
                        "static": {
                            "type": "static",
                            "directory": "../../../static"
                        }
                    }
                },
                {
                    "type": "rawsocket",
                    "endpoint": {
                        "type": "unix",
                        "path": "/tmp/crossbar-broker-sock1"
                    },
                    "auth": {
                        "anonymous": {
                            "type": "static",
                            "role": "xchat"
                        }
                    }
                },
                {
                    "type": "websocket",
                    "endpoint": {
                        "type": "tcp",
                        "port": 48079
                    },
                    "url": "ws://127.0.0.1:48079/app/ws",
                    "auth": {
                        "anonymous": {
                            "type": "static",
                            "role": "xchat"
                        }
                    }
                }
            ],
            "components": [
                {
                    "type": "class",
                    "classname": "authenticator.JWTAuthenticatorSession",
                    "realm": "xchat-auth",
                    "role": "authenticator"
                },
                {
                    "type": "class",
                    "classname": "app.AppSession",
                    "realm": "xchat",
                    "role": "xchat",
                    "extra": {
                    }
                }
            ]
        }
    ]
}
